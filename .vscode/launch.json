  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Run",
      "cargo": {
        "args": ["build"],
        "filter": {
          "name": "codectrl",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },

    {
      "type": "lldb",
      "request": "launch",
      "name": "Run (headless)",
      "cargo": {
        "args": ["build"],
        "filter": {
          "name": "codectrl",
          "kind": "bin"
        }
      },
      "args": ["-H"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
